{
  "version": "0.10.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrmmendes/samless.git"
  },
  "keywords": [
    "aws",
    "sam",
    "serverless",
    "cli"
  ],
  "name": "@jrmmendes/samless",
  "type": "module",
  "author": "jrmmendes <jrmmendes@outlook.com>",
  "license": "MIT",
  "description": "AWS SAM CLI wrapper with improved DX",
  "bin": {
    "samless": "./samless.js"
  },
  "scripts": {
    "clear": "rimraf dist",
    "build": "bun run clear && tsup --minify",
    "start": "node dist/entrypoint.js",
    "prepublishOnly": "npm run build"
  },
  "tsup": {
    "entry": [
      "src"
    ],
    "outDir": "dist",
    "format": [
      "esm"
    ],
    "bundle": true,
    "platform": "node",
    "target": "esnext",
    "ignore": [
      "src/*.log"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ink": "^2.0.3",
    "@types/ink-testing-library": "^1.0.4",
    "@types/node": "^22.14.1",
    "@types/pino": "^7.0.4",
    "@types/react": "^19.1.1",
    "ink-testing-library": "^4.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5"
  },
  "dependencies": {
    "ink": "^5.2.0",
    "ink-text-input": "^6.0.0",
    "pino": "^9.6.0",
    "react": "18"
  },
  "files": [
    "dist",
    "samless.js"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
