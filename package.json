{
  "version": "0.1.0",
  "name": "@mnds/samless",
  "type": "module",
  "bin": {
    "samless": "./samless.js"
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js"
  },
  "tsup": {
    "entry": ["src"],
    "outDir": "dist",
    "format": ["esm"],
    "bundle": true,
    "platform": "node",
    "target": "esnext",
    "ignore": ["src/*.log"]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.14.1",
    "tsup": "^8.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/ink": "^2.0.3",
    "@types/pino": "^7.0.5",
    "@types/react": "^19.1.1",
    "ink": "^5.2.0",
    "ink-text-input": "^6.0.0",
    "pino": "^9.6.0",
    "react": "18",
    "react-devtools-core": "^6.1.1"
  }
}
